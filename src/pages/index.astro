---
import BrandLogoLink from '../components/BrandLogoLink.astro';
import ButtonComponent from '../components/ButtonComponent/ButtonComponent.astro';
import Layout from '../layouts/Layout.astro';

const pages = [
    {
        title: 'Home',
        link: '/',
    },
    {
        title: 'Trading apps',
        link: '/trading-apps',
    },
    {
        title: 'Signal sources',
        link: '/signal-sources',
    },
    {
        title: 'About',
        link: '/about',
    },
]
---

<Layout pageTitle="Home">
    <BrandLogoLink />
    {
        pages.map(page => (
            <ButtonComponent href={page.link}>
                <span class="tab-label">{ page.title }</span>
            </ButtonComponent>
        ))
    }
</Layout>

<style>
    .tab-label {
        all: unset;
    }
</style>
