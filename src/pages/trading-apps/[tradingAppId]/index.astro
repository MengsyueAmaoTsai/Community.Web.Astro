---
import { apiService } from "../../../api-service";
import Button from "../../../components/Button.astro";
import Layout from "../../../layouts/Layout.astro";

const { tradingAppId } = Astro.params;

const tradingApp = await apiService.getTradingAppById(tradingAppId as string);
---

<Layout pageTitle={tradingApp.name}>
    <div class="app-info">
        <h1 class="title view-transition">{tradingApp.name}</h1>
        
        <p class="subtitle">
            <Button href="">
                {tradingApp.id}
            </Button>
        </p>

        <div class="reviews-age-rating-container">
        </div>

        <div class="buy-box-container">

        </div>
    </div>
</Layout>