---
import AutoCompleteAppSearch from "../AutoCompleteAppSearch.astro";
import Button from "../Button.astro";
import ButtonGroup from "../ButtonGroup.astro";
import BrandLogoLink from "./BrandLogoLink.astro";

const pages = [
    {
        title: 'Home',
        route: '/'
    },
    {
        title: 'Trading apps',
        route: '/trading-apps'
    },
    {
        title: 'Signal sources',
        route: '/signal-sources'
    },
    {
        title: 'About',
        route: '/about'
    },
];
---

<div class="nav-bar">
    <div class="navbar-search-container">
        <div class="skip-to-main"></div>
        
        <div class="nav-buttons-container">
            <BrandLogoLink/>
            <ButtonGroup>
                {
                    pages.map(page => (
                        <Button href={ page.route }>
                            <span class="tab-label">{ page.title }</span>
                        </Button>
                    ))
                }
                <div class="indicator"></div>
            </ButtonGroup>
        </div>

        <div class="right-elements">
            <div class="mobile-button-container"></div>
            <AutoCompleteAppSearch></AutoCompleteAppSearch>
            <div class="right-button-container">
                <div class="store-button-container">
                    <Button href="/">
                        <div class="row">
                            <img class="small-logo" src="https://apps.microsoft.com/assets/icons/dark-logo-32x32.png">
                            <span class="open-store-text">Open Store app</span>
                        </div>                            
                    </Button>
                </div>

                <div class="lazy-load">Sign in</div>
            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .nav-bar {
        display: grid;
    }

    .navbar-search-container {
        display: flex;
        justify-self: center;
        width: 100%;
        max-width: 1996px;
    }

    .skip-to-main {
        position: absolute;
        left: calc(var(--layout-padding) / 2);
        z-index: -1;
        opacity: 0;
    }

    .nav-buttons-container {
        display: flex;
        justify-content: center;
    }

    .right-elements {
        display: flex;
        flex-direction: row;
        width: 100%;
        justify-content: flex-end;
    }

    .right-button-container {
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .row {
        display: flex;
        flex-direction: row;
    }

    .small-logo {
        position: relative;
        width: 1rem;
        height: 1rem;
        align-self: center;
        margin-inline-end: 0.25rem;
    }

    .open-store-btn {
        @media (max-width: 1231px) {
            & .small-logo {
                margin-inline-end: 0px !important;
                top: 7px;
            }
        }
    }    

    .open-store-text {
        position: relative;
    }

    .open-store-btn {
        @media (max-width: 1231px) {
            & .open-store-text {
                display: none;
            }
        }
    }
</style>