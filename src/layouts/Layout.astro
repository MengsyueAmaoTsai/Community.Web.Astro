---
interface Props {
	title: string;
}

type MenuItem = {
	title: string;
	route: string;
}

const { title } = Astro.props;

const menuItems: MenuItem[] = [
	{
		title: 'Home',
		route: '/'
	},
	{
		title: 'Trading apps',
		route: '/trading-apps'
	},
	{
		title: 'Signal sources',
		route: '/signal-sources'
	},
	{
		title: 'About',
		route: '/about'
	},
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Richill Capital Community</title>
	</head>
	<body>
		<div>Richill Capital | Community</div>
		<div>
			{
				menuItems.map(item => (
					<a href={ item.route }>{ item.title }</a>
				))
			}
		</div>

		<input type="text" placeholder="Search apps, games, movies, and more">

		<div>Sign in</div>
	</body>
</html>

<style is:global>
</style>
