---
const { href } = Astro.props;
---

<div>
    <a part="base" href={href} class="button button--text button--medium button--standard button--has-label">
        <slot part="label" class="button__label"/>
    </a>
</div>

<style>
    .button {
        display: inline-flex;
        align-items: stretch;
        justify-content: center;
        width: 100%;
        border-style: solid;
        border-width: 1px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        font-weight: 500;
        text-decoration: none;
        user-select: none;
        white-space: nowrap;
        vertical-align: middle;
        padding: 0px;
        transition: 50ms background-color, 50ms color, 50ms border, 50ms box-shadow;
        cursor: inherit;
    }

    .button--text {
        background-color: transparent;
        border-color: transparent;
        color: rgb(66 136 202);
    }

    .button--medium {
        height: auto;
        min-height: 2.5rem;
        font-size: 0.875rem;
        line-height: calc(2.5rem - 1px * 2);
        border-radius: 0.25rem;
    }    
    
    :host([data-sl-button-group__button--inner]) 
    .button {
        border-radius: 0px;
    }

    .sl-button-group > .sl-button::part(base) {
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
        font-weight: 600;
        border-radius: 4px;
    }
    
    .sl-button-group > .sl-button:not(.active)::part(base) {
        color: hsl(240 5.3% 58%);
    }

    /* Label */
    .button__label {
        display: inline-block;
    }

    .button--has-label.button--medium .button__label {
        padding: 1rem;
    }

    .sl-button-group > .sl-button::part(label) {
        padding: 1.25rem;
    }    
</style>
